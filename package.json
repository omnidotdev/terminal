{
  "private": true,
  "workspaces": [
    "frontends/wasm"
  ],
  "scripts": {
    "check": "biome check --diagnostic-level=error scripts",
    "lint": "biome lint --write scripts",
    "format": "biome format --write scripts",
    "version": "changeset version && bun scripts/syncVersion.ts",
    "release": "bun run --cwd frontends/wasm build && NPM_CONFIG_PROVENANCE=true changeset publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "husky": "^9.0.0"
  }
}
